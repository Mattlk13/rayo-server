<?xml version="1.0" encoding="UTF-8"?>
<web-app id="rayo" version="2.5" 
  xmlns="http://java.sun.com/xml/ns/javaee" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>rayo</display-name>

  <!-- Ameche HTTP Servlet -->
  <servlet>
    <servlet-name>ameche-transport</servlet-name>
    <servlet-class>com.rayo.server.ameche.AmecheServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
    <init-param>
        <param-name>rayoUrl</param-name>
        <param-value>http://localhost:8080/rayo/ameche</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ameche-transport</servlet-name>
    <url-pattern>/ameche/*</url-pattern>
  </servlet-mapping>

  <!-- Clean up listener -->
  <listener>
    <listener-class>com.rayo.web.RayoServletSessionListener</listener-class>
  </listener>
  
</web-app>